@model HaverDevProject.Models.Item

@{
    ViewData["Title"] = "Item";
}

<div class="col-md-6 col-10 mx-auto">
    <h1>Items</h1>
</div>
<div class="col-md-6 col-10 mx-auto">
    <div class="card border-2">
        <div class="card-header bg-custom-color mb-2">
            <h2>Details Supplier</h2>
        </div>
        <div class="card-body col-lg-10 col-11 mx-auto">
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ItemNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemNumber)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ItemName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemName)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemDescription)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Supplier)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Supplier.SupplierName)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <div class="form-group d-flex justify-content-end mt-2">
                <div>
                    <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">
                        <i class="bi bi-arrow-90deg-left"></i> Back to List
                    </button>
                </div>
                <div>
                    <a type="button" class="btn btn-primary ms-4" asp-action="Edit" asp-route-id="@Model?.ItemId">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
