@{
    ViewData["Title"] = "Home Page";
}

<div class="row text-center">
    <div class="dashboard mt-3">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-md-4 p-2">
                <a class="dashboard-item text-decoration-none mb-4" asp-area="" asp-controller="Ncr" asp-action="Create">
                    <i class="bi bi-file-earmark-plus"></i>
                    <p>New NCR</p>
                </a>
            </div>
            <div class="col-md-4">
                <a class="dashboard-item text-decoration-none mb-4" asp-area="" asp-controller="Ncr" asp-action="Index">
                    <i class="bi bi-file-earmark-spreadsheet"></i>
                    <p>NCR List</p>
                </a>
            </div>
            <div class="col-md-4">
                <a class=" dashboard-item text-decoration-none mb-4" asp-area="" asp-controller="Supplier" asp-action="Index">
                    <i class="bi bi-buildings"></i>
                    <p>Suppliers</p>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="dropdown">
                <a role="button" href="#" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false" class="dashboard-item dropdown-with text-decoration-none text-white custom-bg-dashboard-item">
                    <i class="bi bi-person-bounding-box"></i>
                    <p class="dropdown-toggle">Users</p>
                </a>
                <ul class="dropdown-menu custom-dropdown-color" aria-labelledby="adminDropdown">
                    <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Employees</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Roles</a></li>
                </ul>
            </div>
            <a class="dashboard-item text-decoration-none custom-bg-dashboard-item" asp-area="" asp-controller="" asp-action="">
                <i class="bi bi-graph-down"></i>
                <p>KPI Dashboard</p>
            </a>
            <div class="dropdown">
                <a role="button" href="#" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false" class="dashboard-item dropdown-with text-decoration-none text-white">
                    <i class="bi bi-building-gear"></i>
                    <p class="dropdown-toggle">
                        Admin
                    </p>
                </a>
                <ul class="dropdown-menu custom-dropdown-color" aria-labelledby="adminDropdown">
                    <li><a class="dropdown-item" href="#">Items</a></li>
                    <li><a class="dropdown-item" href="#">Defects</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Lookup" asp-action="Index">Lookup Values</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
 